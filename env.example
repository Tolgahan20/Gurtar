# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=gurtar

# JWT - Generate your own secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_jwt_secret_here_generate_with_crypto_randomBytes_64
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_generate_with_crypto_randomBytes_64
JWT_REFRESH_EXPIRES_IN=7d

# GitGuardian (optional)
GITGUARDIAN_API_KEY=your-gitguardian-api-key
